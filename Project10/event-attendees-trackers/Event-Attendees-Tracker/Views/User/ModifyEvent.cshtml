
@{
    ViewBag.Title = "ModifyEvent";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";

}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>E@T</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round|Open+Sans">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/Content/css/CreateCustom.css" rel="stylesheet" />
    <link href="~/Content/css/ModifyEvent.css" rel="stylesheet" />

</head>

<body style="background-color:#dadada">
    <div class="navbar navbar-expand-sm navbar-inverse" style="background-color:white;position:relative;top:7%">

        <div class="container">

            <div class="navbar-header" style="color:white;height:10%">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">

                    <span class="icon-bar"></span>

                </button>
            </div>

            <div class="navbar-collapse collapse" style="color:white;bottom:0px;position:absolute">

                <ul class="nav navbar-nav">
                    <li class="nav-item">

                        @Html.ActionLink("HOME", "Admin", "User", new { @class = "loginLink_home", @id = "addEvent_User" })
                    </li>
                    <li style="color:black;" class="nav-item">

                        @Html.ActionLink("ADDORGANIZER", "CreateOrganizer", "User", new { @class = "loginLink_home", @id = "addEvent_User" })

                    </li>
                    <li style="color:black;" class="nav-item">

                        @Html.ActionLink("MODIFYEVENTS", "ModifyEvent", "User", new { @class = "loginLink_home", @id = "addEvent_User" })

                    </li>
                    <li style="color:black;" class="nav-item">
                        @Html.ActionLink("REPORTS", "Organizer", "User", new { @class = "loginLink_home", @id = "addEvent_User" })
                    </li>
                </ul>

            </div>

        </div>

    </div>
    <div class="w3-container">
        <div class="container" style="background-color:white">
            <div class="row">


                <div class="col-md-12">
                    <h4><b>EVENT</b> <b>DETAILS</b></h4>
                    <div class="table-responsive">


                        <table id="mytable" class="table">

                            <thead>


                            <th>Event Name</th>
                            <th>Description</th>
                            <th>Edit</th>
                            <th>Delete</th>
                            </thead>
                            <tbody>
                                @{

                                    for (int i = 1; i < 25; i++)
                                    {


                                        @:<tr>
                                            @:<td>Mohsin</td>
                                            @:<td>CB 106/107 Street # 11 Wah Cantt Islamabad Pakistan</td>
                                            @* @:<td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" value="" onclick="@("window.location.href='" + @Url.Action("CreateEvent", "User") + "'");" ><span class="glyphicon glyphicon-pencil"></span></button></td>*@
                                            @:<td>
                                                <p data-placement="top" data-toggle="tooltip" title="Edit">
                                                    using (Html.BeginForm("Edit", "User", FormMethod.Post))
                                                    {
                                                        @:<button name="X-HTTP-Method-Override" value="EDIT" formnovalidate class="cancel btn btn-primary btn-xs"><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                                                    }
                                                    @:<td>
                                                        @:<p data-placement="top" data-toggle="tooltip" title="Delete">
                                                            using (Html.BeginForm("Delete", "User"))
                                                            {
                                                                @:<button name="X-HTTP-Method-Override" value="DELETE" formnovalidate class="cancel btn btn-danger btn-xs" onclick="return confirm('Are you sure?')"><span class="glyphicon glyphicon-trash"></span></button></p></td>
                                                            }

                                                        @:</tr>
                                                    }
                                }
                            </tbody>

                        </table>



                    </div>

                </div>
            </div>
        </div>


    </div>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script>
    <script src="~/Content/Js/CreateCustom.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="~/Content/Js/ModifyEvent.js"></script>
</body>
</html>


